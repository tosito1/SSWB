{% extends "base.njk" %}

{% block content %}
<section class="py-5 error-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <div class="error-code display-1 fw-bold text-primary mb-4">404</div>
                <h1 class="display-4 mb-4">{{ titulo }}</h1>
                <p class="lead mb-5">{{ mensaje }}</p>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card shadow-sm mb-5">
                            <div class="card-body">
                                <h2 class="h4 mb-3">¿Qué puedo hacer ahora?</h2>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-arrow-right text-primary me-2"></i><a href="/">Ir a la página de inicio</a></li>
                                    <li class="mb-2"><i class="fas fa-arrow-right text-primary me-2"></i><a href="/obras-singulares">Ver obras singulares</a></li>
                                    <li class="mb-2"><i class="fas fa-arrow-right text-primary me-2"></i><a href="/colecciones">Explorar colecciones</a></li>
                                    <li class="mb-2"><i class="fas fa-arrow-right text-primary me-2"></i><a href="/actualidad">Consultar actualidad</a></li>
                                    <li><i class="fas fa-arrow-right text-primary me-2"></i><a href="/contacto">Contactar con el museo</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/" class="btn btn-primary btn-lg">Volver a la página de inicio</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block scripts %}
<style>
    .error-page {
        padding: 5rem 0;
    }
    
    .error-code {
        font-size: 8rem;
        line-height: 1;
        opacity: 0.8;
    }
    
    @media (max-width: 768px) {
        .error-code {
            font-size: 6rem;
        }
    }
</style>
{% endblock %} 